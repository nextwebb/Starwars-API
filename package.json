{
  "name": "backend-template-rest",
  "version": "1.0.0",
  "description": "Express + Typescript + Jest with Docker",
  "main": "src/server.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "db:migrate": "npx prisma migrate dev --preview-feature",
    "db:gen": "npx prisma generate",
    "db:seed": "npx prisma db seed --preview-feature",
    "build": "npx tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/server.ts",
    "start": "node build/src/server.js"
  },
  "keywords": [],
  "author": "Tri Rizeki Rifandani",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^2.15.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^5.2.0",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.15.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
